# Environment
APP_ENV=development
PORT=8080
LOG_LEVEL=debug

# Database (SQLite for development)
DB_DRIVER=sqlite
DB_NAME=truthordare.db
# For Docker deployment, use DB_PATH for external volume
# DB_PATH=/data/truthordare.db

# For PostgreSQL (production):
# DB_DRIVER=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_NAME=truthordare
# DB_SSL_MODE=disable

# API Configuration
API_PREFIX=/api
API_VERSION=v1

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# AI Configuration (supports both OpenAI and Groq-compatible APIs)
# OPENAI_API_KEY=your_api_key_here
# AI_MODEL=llama-3.3-70b-versatile
# AI_API_URL=https://api.groq.com/openai/v1/chat/completions

# Legacy Groq-specific (still supported)
# GROQ_API_KEY=your_groq_api_key
# GROQ_MODEL=llama-3.3-70b-versatile
# GROQ_API_URL=https://api.groq.com/openai/v1/chat/completions

# Scheduler Configuration
SCHEDULER_ENABLED=true
CLEANUP_ENABLED=true
CLEANUP_CRON=0 0 * * 0
CLEANUP_RETENTION_MONTHS=2
AUTO_GENERATE_ENABLED=true
AUTO_GENERATE_CRON=0 2 * * 0
AUTO_GENERATE_COUNT=5
